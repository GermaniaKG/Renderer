{
	"name":        "germania-kg/renderer",

	"description": "Render Callables for PHP files, Twig, Smarty and Markdown",

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

	"autoload": {
			"psr-4": {
					"Germania\\Renderer\\": "src/"
			}
	},

    "autoload-dev": {
        "psr-4": { "tests\\": "tests/src" }
    },

    "suggest": {
        "twig/twig": "The template engine of choice.",
        "smarty/smarty": "Just in case you miss it",
        "cebe/markdown": "Nice Markdown parser"
    },

		"require": {
			"php": "^5.6|^7.0",
			"psr/log": "^1.0",
			"psr/http-message": "^1.0"
		},

		"require-dev": {
	        "php-coveralls/php-coveralls": "^2.0",
	        "phpunit/phpunit": "^5.7|^6.0",
					"smarty/smarty": "^3.1",
					"twig/twig": "^1.28|^2.0",
					"cebe/markdown": "^1.1"
		},

    "scripts": {
        "phpunit": "phpunit",

        "test": [
            "@phpunit"
        ]
    }



}
