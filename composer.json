{
    "name": "germania-kg/renderer",

    "description": "Render Callables for PHP files, Twig, Smarty and Markdown",

    "type": "library",
    "license": "MIT",

    "authors": [{
        "name": "Carsten Witt",
        "email": "admin@germania-kg.com",
        "role": "Developer"
    }],

    "autoload": {
        "psr-4": {
            "Germania\\Renderer\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/src"
        }
    },

    "suggest": {
        "twig/twig": "The template engine of choice.",
        "smarty/smarty": "Just in case you miss it",
        "cebe/markdown": "Nice Markdown parser"
    },

    "require": {
        "php": "^7.3|^8.0",
        "psr/log": "^1.0",
        "psr/http-message": "^1.0"
    },

    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.0",
        "smarty/smarty": "^3.1.39",
        "twig/twig": "^2.0|^3.0",
        "cebe/markdown": "^1.2"
    },

    "scripts": {
        "phpunit": "phpunit",

        "test": [
            "@phpunit"
        ]
    }



}
